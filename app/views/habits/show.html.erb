<h2> Details about your <%= "#{@habit.name}" %> habit</h2>

<div id="form">
  <%= form_for @habit do |f| %>
    <%= f.label 'Edit Habit Name' %>
    <%= f.text_field :name %>
    <%= f.label 'Edit Notification Time' %>
    <%= f.time_select 'notification_time', {minute_step: 15, :ampm => true} %>
    <%= f.submit 'Save' %>
  <% end %>
</div>

<%= link_to "Back", dashboard_path %>
